<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.app.FragmentTabHost
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@android:id/tabhost"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:orientation="vertical"
            >


        <LinearLayout android:layout_width="match_parent" android:layout_height="45dp"
                      android:orientation="horizontal"
                      android:id="@+id/layout_page"
                      android:layout_alignParentBottom="true"
                >
            <Button android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="1"
                    android:id="@+id/btn_1"
                    />

            <Button android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="2"
                    android:id="@+id/btn_2"
                    />

            <Button android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="3"
                    android:id="@+id/btn_3"
                    />

        </LinearLayout>

        <FrameLayout
                android:id="@+id/real_tab_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/layout_page"
                />
        <TabWidget android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:id="@android:id/tabs" android:visibility="gone"
                />

        <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:id="@android:id/tabcontent"
                />


    </RelativeLayout>
</android.support.v4.app.FragmentTabHost>

